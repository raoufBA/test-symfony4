{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    <h1>Post index</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', {'id': post.id }) }}">{{ post.title }}</a></td>
                <td>{{ post.description }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                    <a class="btn btn-danger" href="{{ path('post_delete', {'id': post.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success " href="{{ path('post_new') }}">Create new</a>
{% endblock %}
