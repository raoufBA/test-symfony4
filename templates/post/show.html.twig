{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ post.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ post.description }}</td>
        </tr>
        {% if post.image %}
            <tr>
                <img height="300px" width="300px" src="{{ '/uploads/' ~ post.image }}" alt="{{ post.title }}">
            </tr>
        {% endif %}

        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
